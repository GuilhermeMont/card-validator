@{
    ViewBag.Title = "Home Page";
}
@model CreditCardSolution.Models.CreditCard

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Digit" class="control-label">Credit Card digits</label>
                <input asp-for="Digit" class="form-control" />
                <span asp-validation-for="Digit" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Validate" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>